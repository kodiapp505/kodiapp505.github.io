<addons>

	<addon id="repository.kodiapp505" name="kodiapp505 repository" version="1.2" provider-name="GOAT">
		<extension point="xbmc.addon.repository" name="kodiapp505 repository">
			<dir>
				<info compressed="false">https://raw.githubusercontent.com/kodiapp505/kodiapp505.github.io/main/addons.xml</info>
				<checksum>https://raw.githubusercontent.com/kodiapp505/kodiapp505.github.io/main/addons.xml.md5</checksum>
				<datadir zip="true">https://raw.githubusercontent.com/kodiapp505/kodiapp505.github.io/main/_zips</datadir>
				<hashes>false</hashes>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>kodiapp505 repository</summary>
			<description>This repository contains all the kodi apps you care about!</description>
			<platform>all</platform>
		</extension>
	</addon>

	<addon id="plugin.video.fargonews" version="1.0.2" name="Fargo News" provider-name="GOAT">
		<requires>
			<import addon="xbmc.python" version="3.0.0"/>
			<import addon="script.module.beautifulsoup4" />
			<import addon="script.module.requests" />
			<import addon="script.module.simplejson" />
		</requires>
		<extension point="xbmc.python.pluginsource" library="main.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">Fargo news and information</summary>
			<description lang="en">Fargo news and information.</description>
			<assets>
				<icon>icon.jpg</icon>
				<fanart>fanart.jpg</fanart>  
			</assets>
			<news></news>
		</extension>
	</addon>

	<addon id="plugin.video.gorillasports" version="1.0.1" name="Gorilla Sports" provider-name="GOAT">
		<requires>
			<import addon="xbmc.python" version="3.0.0"/>
			<import addon="script.module.beautifulsoup4" />
			<import addon="script.module.requests" />
			<import addon="script.module.simplejson" />
		</requires>
		<extension point="xbmc.python.pluginsource" library="main.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en">Gorilla Sports</summary>
			<description lang="en_GB">Gorilla Sports.</description>
			<disclaimer lang="en_GB">...</disclaimer>
			<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>  
			</assets>
			<news></news>
		</extension>
	</addon>
	
</addons>
